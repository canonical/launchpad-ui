{
  "name": "launchpad-ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "bun run format && eslint . --fix",
    "check": "bun run check:svelte && bun run lint",
    "check:fix": "bun run check:svelte && bun run lint:fix",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:svelte:watch": "bun run check:svelte -- --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:server": "bun run test --project=server",
    "test:client": "bun run test --project=client",
    "test:ssr": "bun run test --project=ssr",
    "test:client:chromium": "bun run test --project=client --browser=chromium",
    "test:client:firefox": "bun run test --project=client --browser=firefox",
    "test:client:webkit": "bun run test --project=client --browser=webkit",
    "test:watch:client": "bun run test:watch --project=client --browser.headless=false",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@canonical/svelte-ssr-test": "^0.10.0-experimental.3",
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.35.0",
    "@storybook/addon-a11y": "^9.1.6",
    "@storybook/addon-docs": "^9.1.6",
    "@storybook/addon-svelte-csf": "^5.0.8",
    "@storybook/addon-themes": "^9.1.6",
    "@storybook/addon-vitest": "^9.1.6",
    "@storybook/sveltekit": "^9.1.6",
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.42.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@types/node": "^24",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-storybook": "^9.1.6",
    "eslint-plugin-svelte": "^3.12.3",
    "globals": "^16.4.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "storybook": "^9.1.6",
    "svelte": "^5.39.2",
    "svelte-check": "^4.3.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "patchedDependencies": {
    "@storybook/svelte-vite@9.1.6": "patches/@storybook%2Fsvelte-vite@9.1.6.patch",
    "markdown-actions@1.1.2": "patches/markdown-actions@1.1.2.patch"
  },
  "dependencies": {
    "markdown-actions": "^1.1.2",
    "normalize.css": "^8.0.1",
    "@canonical/launchpad-design-tokens": "^1.0.20",
    "@floating-ui/dom": "^1.7.4"
  }
}
