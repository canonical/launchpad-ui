{
  "name": "launchpad-ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev:mock": "vite dev --mode mock",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "bun run format && eslint . --fix",
    "check": "bun run check:svelte && bun run lint",
    "check:fix": "bun run check:svelte && bun run lint:fix",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:svelte:watch": "bun run check:svelte -- --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:server": "bun run test --project=server",
    "test:client": "bun run test --project=client",
    "test:ssr": "bun run test --project=ssr",
    "test:client:chromium": "bun run test --project=client --browser=chromium",
    "test:client:firefox": "bun run test --project=client --browser=firefox",
    "test:client:webkit": "bun run test --project=client --browser=webkit",
    "test:watch:client": "bun run test:watch --project=client --browser.headless=false",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "openapi:update": "bun run openapi:update-schema && bun run openapi:generate-types",
    "openapi:update-schema": "sha=$(git ls-remote https://git.launchpad.net/job-manager refs/heads/main | cut -f1) && curl \"https://git.launchpad.net/job-manager/plain/openapi/openapi.yaml?h=$sha\" | { echo \"# Source commit: $sha\"; cat; } > .api-spec/job-manager.yaml && echo \"Saved .api-spec/job-manager.yaml @ $sha\"",
    "openapi:generate-types": "openapi-typescript .api-spec/job-manager.yaml -o src/lib/api/job-manager/types.ts --root-types --root-types-no-schema-prefix",
    "mock-server": "prism mock --errors .api-spec/job-manager.yaml --port 4010",
    "mock-server:dynamic": "bun run mock-server -d"
  },
  "devDependencies": {
    "@canonical/svelte-ssr-test": "^0.10.0-experimental.5",
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.39.1",
    "@stoplight/prism-cli": "^5.14.2",
    "@storybook/addon-a11y": "^10.1.6",
    "@storybook/addon-docs": "^10.1.6",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-themes": "^10.1.6",
    "@storybook/addon-vitest": "^10.1.6",
    "@storybook/sveltekit": "^10.1.6",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24.10.2",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-storybook": "^10.1.6",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "openapi-sampler": "^1.6.2",
    "openapi-typescript": "^7.10.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "storybook": "^10.1.6",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.1.11",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "patchedDependencies": {
    "markdown-actions@1.1.2": "patches/markdown-actions@1.1.2.patch",
    "@stoplight/prism-http@5.12.0": "patches/@stoplight%2Fprism-http@5.12.0.patch"
  },
  "dependencies": {
    "@canonical/launchpad-design-tokens": "^1.0.20",
    "@canonical/svelte-icons": "^0.0.8",
    "@floating-ui/dom": "^1.7.4",
    "markdown-actions": "^1.1.2",
    "normalize.css": "^8.0.1",
    "openapi-fetch": "^0.15.0",
    "valibot": "^1.2.0"
  }
}
